<%= render 'layouts/header' %>
<%= title 'New Product' %>
<div class ="container">
 <div class ="row" style="padding:20px">
  <div class ="col-md-2"></div>
  <div class ="col-md-8" style= "background-color:#FAFAFA;border:solid 1px #DDD; padding:10px">
   <h2 class="text-center">New Product</h2><hr/>
   <div class="row">
   <div class ="col-md-2"></div>
   <div class ="col-md-8">
    <%= form_for(@product) do |f| %>
      <% if @product.errors.any? %>
     <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>
       <ul>
      <% @product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row"><div class="col-sm-12 form-group">
    <%= f.label :name %><br>
    <%= f.text_field :name, class: 'form-control' %>
  </div></div>
  <div class="row"><div class="col-sm-12 form-group">
    <%= f.label :brand %><br>
    <%= f.text_field :brand, class: 'form-control' %>
  </div></div>
  <div class="row"><div class="col-sm-12 form-group">
    <%= f.label :category %><br>
    <%= f.text_field :category, class: 'form-control' %>
  </div></div>
  <div class="row"><div class="col-sm-12 form-group">
    <%= f.label :image %><br>
    <%= f.file_field :image, class: 'form-control' %> #File upload field
  </div></div>
  <div class="row"><div class="col-sm-5 form-group">
    <%= f.label :unit %><br>
    <%= f.text_field :unit, class: 'form-control' %>
  </div></div>
  <div class="row"><div class="col-sm-12 form-group">
    <%= f.label :spec %><br>
    <%= f.text_field :spec, class: 'form-control' %>
  </div></div>
  <div class="row"><div class="col-sm-5 form-group">
    <%= f.label :price %><br>
    <%= f.text_field :price, class: 'form-control' %>
  </div></div>
  <div class="row"><div class="col-sm-12">
    <%= f.submit class: 'btn btn-default' %>
  </div></div>
<% end %>
<%= link_to 'Back', products_path,:class =>'btn btn-default pull-right'%>
</div>
<div class ="col-md-2"></div>
</div>
</div>
 <div class ="col-md-2"></div>
 </div>
</div>
