<%= render 'layouts/header' %>
<%= title 'Listing Products' %>
<% javascript_include_tag 'pagination'%>

<h1 style ="color:#fff;"><strong>Listing Products</strong></h1>

<div class="container">
   <div class ="row">
 <div class ="col-sm-4 col-lg-4 col-md-4 ">
      </div>
  <div class="col-sm-4 col-lg-4 col-md-4 ">
      <div class="thumbnail" style="border:2px solid red;">
        <%= will_paginate @products %>
           <% for product in @products %> 
        <%= link_to image_tag(product.image,:class=>"image-style"), product %>
         <div class="caption">
         <h5>
            <%= product.name %>
            <%= number_to_currency(product.price)%>
             <%= product.spec %>
         </h5>
       <h5>
       <%= link_to "Edit",edit_product_path(product),:class => "btn btn-default btn-sm" %> |
       <%= link_to "Destroy",product, :confirm => 'Are you sure?',:class => "btn btn-default btn-sm", :method => :delete %>
       </h5>
        </div> <!--caption-->
      </div> <!-- thumbnail-->
        <% end %>

  <%= will_paginate @products %>
  <p><%= link_to 'New Product', new_product_path,:class =>"btn-default btn btn-sm pull-right" %></p>
     </div> 
   <div class ="col-sm-4 col-lg-4 col-md-4">
     </div> 
  </div>
</div>
  




