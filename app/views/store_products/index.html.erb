<p id="notice"><%= notice %></p>

<h1>Listing Store Products</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Product</th>
      <th>Price</th>
      <th>Stock</th>
      <th>In w</th>
      <th>In r</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @store_products.each do |store_product| %>
      <tr>
        <td><%= store_product.user_id %></td>
        <td><%= store_product.product_id %></td>
        <td><%= store_product.price %></td>
        <td><%= store_product.stock %></td>
        <td><%= store_product.in_w %></td>
        <td><%= store_product.in_r %></td>
        <td><%= link_to 'Show', store_product %></td>
        <td><%= link_to 'Edit', edit_store_product_path(store_product) %></td>
        <td><%= link_to 'Destroy', store_product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

